@{
    ViewData["Title"] = "Delete Page";
}
@model MovieResponse

<!--Delete razor view with confirmation from the user-->
<h2>Confirm Deletion</h2>
<h3>Are you sure you want ot delete the record for @Model.Title @Model.Rating?</h3>
<form method="post" asp-controller="Home" asp-action="Delete">
    <button type="submit">Delete</button>
    <a asp-controller="Home" asp-action="ListMovies" class="btn btn-primary">Cancel</a>
    <input type="hidden" asp-for="MovieID" />
</form>
